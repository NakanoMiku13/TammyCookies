
@model IEnumerable<TiendaEnLinea2.Data.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
        <a asp-action="OrderMenu" class="btn btn-outline-warning">Ver ordenes</a>
    </div>

</p>
<table class="table table-responsive table-danger">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colonia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Politicas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordenado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>Pago</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.userid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colonia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Politicas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enviado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ordenado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeEnvio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Visible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cancelado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                @if(item.Pay){
                    <td class="text-success">Pagado</td>
                }else{
                    <td class="text-danger">Sin confirmar pago</td>
                }
                <td>
                    <div class="btn btn-group">
                        <a class="btn btn-info" asp-action="DetailsOrder" asp-route-id="@item.id">Detalles</a>
                        <a class="btn btn-outline-danger" asp-action="ShowOrder" asp-route-id="@item.id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                            </svg>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
