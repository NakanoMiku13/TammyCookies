<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/img/Huawei-Logo.png"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet"/>
    <link href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand btn" asp-area="" asp-controller="Home" asp-action="Index" style="background-color:none; margin-right:12px;">
                    <img src="~/img/Huawei-Logo.png" alt="Logo" style="height:50px;"/>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Contacto" asp-controller="Home">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="Index" asp-controller="ShoppingCart">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-fill" viewBox="0 0 16 16">
                                    <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                </svg>
                            </a>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link">
                                @await Component.InvokeAsync("CategoryMenu")
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link">
                                @await Component.InvokeAsync("UserMenu")
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - TiendaEnLinea2 - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-item">Privacy</a>
            <a href="twitter.com" target="_blank" class="nav-item"><img src="~/img/Twitter-Logo.png" style="height:2rem; width:2rem; margin-left:1rem; margin-right:1rem;"/></a>
            <a href="facebook.com" target="_blank" class="nav-item"><img src="~/img/768px-Facebook_f_logo_(2019).svg.png" style="height:2rem; width:2rem; margin-left:1rem; margin-right:1rem;"/></a>
            <a href="" target="_blank" class="nav-item"><img src="~/img/512px-Telegram_2019_Logo.svg.png" style="height:2rem; width:2rem; margin-left:1rem; margin-right:1rem;"/></a>
            <script src="https://apps.elfsight.com/p/platform.js" defer></script>
            <div class="elfsight-app-eb491798-8e50-43e9-8201-120a54698661"></div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
