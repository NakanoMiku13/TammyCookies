@model IEnumerable<TiendaEnLinea2.Data.Models.Order>

@{
    ViewData["Title"] = "MisCompras";
}

<h1>Mis Compras</h1>

<p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Salir</a>
    </div>
</p>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre) y @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ordenado)
            </th>
            <th>
                Fecha de env&iacute;o
            </th>
            <th>
                Referencia de pago
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td class="text-wrap">
                @Html.DisplayFor(modelItem => item.Direccion), @Html.DisplayFor(modelItem => item.Estado), @Html.DisplayFor(modelItem => item.Colonia), @Html.DisplayFor(modelItem => item.CP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            @if (item.Enviado)
            {
                <td class="alert alert-success">
                    <span>
                        Tu producto fue enviado
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-truck" viewBox="0 0 16 16">
                            <path d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>
                    </span>
                </td>
            }
            else
            {
                <td class="alert alert-info">
                    <span>
                        Tu producto no ha sido enviado
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-frown" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z" />
                        </svg>
                    </span>
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Ordenado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeEnvio)
            </td>
            <td class="text-wrap">
                @Html.DisplayFor(modelItem => item.RefPago)
            </td>
            @if (item.Cancelado)
            {
                <td class="alert alert-danger">
                    Compra cancelada
                </td>
            }
            else
            {
                <td class="alert alert-success">
                    Compra valida
                </td>
            }
            <td class="text-success">
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.id">Detalles</a>
                    @if (!item.Cancelado)
                    {
                        <a class="btn btn-outline-danger" asp-action="Cancel" asp-route-id="@item.id">Cancelar orden</a>
                    }
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
