@model Delivery
@{
    ViewData["Title"] = "Edit";
}
<h1>Editar</h1>
<div class="row">
    <form asp-action="Edit">
        <div class="form-group">
            <label asp-for="Day"></label>
            <select asp-for="Day" class="form-control" required>
                <option selected disabled>--Seleccione una opci&oacute;n--</option>
                <option value="MONDAY">Lunes</option>
                <option value="TUESDAY">Martes</option>
                <option value="WEDNESDAY">Miercoles</option>
                <option value="THURSDAY">Jueves</option>
                <option value="FRIDAY">Viernes</option>
                <option value="SATURDAY">Sabado</option>
                <option value="SUNDAY">Domingo</option>
            </select>
            <span asp-validation-for="Day" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Hour"></label>
            <input asp-for="Hour" class="form-control" min="0" max="24"/>
            <span asp-validation-for="Hour" class="text-danger">Hora no v&aacute;lida</span>
        </div>
        <div class="form-group">
            <label asp-for="Minutes"></label>
            <input asp-for="Minutes" class="form-control" min="1" max="59"/>
            <span asp-validation-for="Minutes" class="text-danger">Tiempo no v&aacute;lido</span>
        </div>
        <input type="submit" value="Guardar" class="btn btn-primary">
    </form>
</div>
<a asp-action="Index" class="btn-outline-secondary">Regresar</a>