@model Delivery
@{
    ViewData["Title"] = "Create";
}
<h1>Crear</h1>
<div class="row">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Day"></label>
            <select asp-for="Day" class="form-control" required>
                <option selected disabled>--Seleccione una opci&oacute;n--</option>
                <option value="MONDAY">Lunes</option>
                <option value="TUESDAY">Martes</option>
                <option value="WEDNESDAY">Miercoles</option>
                <option value="THURSDAY">Jueves</option>
                <option value="FRIDAY">Viernes</option>
                <option value="SATURDAY">Sabado</option>
                <option value="SUNDAY">Domingo</option>
            </select>
            <span asp-validation-for="Day">
                D&iacute;a no v&aacute;lido
            </span>
        </div>
        <div class="form-group">
            <label asp-for="Hour"></label>
            <input asp-for="Hour" max="24" min="0" type="number" class="form-control"/>
            <span asp-validation-for="Hour"></span>
        </div>
        <div class="form-group">
            <label asp-for="Minutes"></label>
            <input asp-for="Minutes" class="form-control" min="1" max="59"required/>
            <span asp-validation-for="Minutes" class="text-danger"></span>
        </div>
        <input type="submit" value="Guardar" class="btn btn-primary">
    </form>
</div>